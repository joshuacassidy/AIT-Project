@model TradeTracker.Models.Product

<h2 class="page-title">Product Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-custom">
        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-spacing" })
            </div>
        </div>

        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Price, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control form-spacing" })
            </div>
        </div>


        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Category, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control form-spacing" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.LabelFor(m => m.Status, new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownList("StatusId", null, htmlAttributes: new { @class = "form-control form-spacing" })
                @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-success button-custom form-spacing" value="Edit" />
        </div>
    </div>

            @Html.HiddenFor(m => m.UserId)
}


<div class="form-custom">

    <div class="col-md-offset-3 col-md-9">
        <a href="/Products" class="btn btn-danger button-custom form-spacing">Back to Products</a>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
